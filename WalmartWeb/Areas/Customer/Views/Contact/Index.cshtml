@model Contact

@{
	ViewData["Title"] = "Contact us.";
}

<div class="card shadow border-0 mt-4">
	<div class="card header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class=" text-dark py-2">How can we help you today?  </h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4 ">
		<form id="contactForm" method="post">


			<div class="border p-3 ">
				<h4 class="text-left mb-4">Contact Us</h4>
				<div class="form-floating mb-3 col-md-12">
					<input asp-for="Name" class="form-control border-0 shadow" />
					<label asp-for="Name" class="ms-2"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3 col-md-12">
					<input asp-for="EmailId" class="form-control border-0 shadow" />
					<label asp-for="EmailId" class="ms-2"></label>
					<span asp-validation-for="EmailId" class="text-danger"></span>
				</div>


				<div class="form-floating mb-3 col-md-12">

					<textarea asp-for="Message" rows="5" cols="10" class="form-control border-0 shadow"></textarea>
					<label asp-for="Message" class="ms-2"></label>
					<span asp-validation-for="Message" class="text-danger"></span>

				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-6">
						<h2 class="text-primary">
							<button type="submit" asp-action="SendMsg" class="btn btn-primary form-control">Send Message</button>
@* 
							<button type="submit" class="btn btn-primary form-control w-100" onclick="handleRoleChange()"></button>
 *@
						</h2>
					</div>
					<div class="col-6 col-md-6">
						<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border form-control">
							Back to List
						</a>
					</div>
				</div>

			</div>
		</form>


	</div>

</div>




@section Scripts {
	<script src="~/js/popper.js"></script>
	<partial name="_ValidationScriptsPartial" />
	





}

