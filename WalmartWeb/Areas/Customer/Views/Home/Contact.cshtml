@{
    ViewData["Title"] = "Contact us.";
}

<div class="card shadow border-0 mt-4">
	<div class="card header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
                <h2 class=" text-dark py-2">How can we help you today?  </h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4 ">
		<form id="contactForm" method="post">
			

			<div class="border p-3 ">
				<h4 class="text-center mb-4">Contact Us</h4>
				
					<div class="form-floating mb-3 col-md-6">
                    
                    <input type="text" class="form-control" id="name" placeholder="Name" required>
					<label id="lblname" class="form-label">Name</label>
					</div>
					<div class="form-floating mb-3 col-md-6">
                    
                    <input type="email" class="form-control" id="email" placeholder="Email" required>
					<label id="lblemail" class="form-label">Your Email</label>
                </div>


                <div class="form-floating mb-3 col-md-6">
                   
                    <textarea class="form-control" id="message" rows="5" placeholder="Message" required></textarea>
					<label id="lblmessage" class="form-label">Your Message</label>
					
                </div>
				<div id="errorMessages"></div>
				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<h2 class="text-primary">


							<button type="submit" class="btn btn-primary form-control w-100" onclick="handleRoleChange()">Send Message</button>
							
						</h2>
					</div>
					<div class="col-6 col-md-3">
						<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border form-control">
							Back to List
						</a>
					</div>
				</div>

			</div>
		</form>


	</div>

</div>




