    </div> *@
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

            function togglePassword() {
            var toggler = document.getElementById('password_input_field');
            if(toggler.type === "password"){
                toggler.type = "text";
            }else{
                toggler.type = "password";
            }
        }
    </script>
}
